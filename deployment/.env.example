# SmartPen 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ============================================
# 数据库配置
# ============================================
POSTGRES_USER=smartpen
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=smartpen
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://smartpen:change_this_password_in_production@postgres:5432/smartpen

# ============================================
# Redis 配置
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================
# HuggingFace 配置
# ============================================
# 用于下载 InkSight 模型
# 获取方式: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ============================================
# 应用配置
# ============================================
# 环境模式: development / production
APP_ENV=production

# 日志级别: DEBUG / INFO / WARNING / ERROR
LOG_LEVEL=INFO

# API 配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS 配置
CORS_ORIGINS=https://smartpen.example.com,https://www.smartpen.example.com

# ============================================
# 安全配置
# ============================================
# JWT 密钥 (用于 API 认证，生产环境必须更改)
SECRET_KEY=change_this_secret_key_in_production

# JWT 过期时间（天）
ACCESS_TOKEN_EXPIRE_DAYS=7

# ============================================
# 存储配置
# ============================================
# 本地存储路径
UPLOAD_DIR=/app/uploads
MODEL_CACHE_DIR=/root/.cache

# ============================================
# 第三方服务
# ============================================
# 阿里云 OSS (可选，用于文件存储)
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_ENDPOINT=

# Sentry (错误追踪，可选)
SENTRY_DSN=

# ============================================
# 功能开关
# ============================================
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_POSTURE_MONITORING=true
ENABLE_GRIP_DETECTION=true

# ============================================
# 性能配置
# ============================================
# 最大上传文件大小 (MB)
MAX_UPLOAD_SIZE=10

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 数据库连接池大小
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================
# 域名配置
# ============================================
DOMAIN=api.smartpen.example.com
FRONTEND_URL=https://smartpen.example.com
